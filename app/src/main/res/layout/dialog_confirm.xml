<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="380dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="9dp"
    android:layout_marginBottom="10dp"
    android:background="#ECECEC"
    tools:context=".ConfirmDialogFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/ticketCardView"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        card_view:cardBackgroundColor="#6441A5"

        card_view:cardElevation="10dp">

        <TextView
            android:id="@+id/ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="모바일 티켓"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/confirmCardView"
        android:layout_width="240dp"
        android:layout_height="330dp"
        android:layout_below="@id/ticketCardView"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        card_view:cardCornerRadius="15dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/confirm_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=""
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/confirm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:layout_marginTop="60dp"
            android:textSize="12dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/confirm_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="2024.01.03 (수)"
            android:layout_marginTop="95dp"
            android:textSize="10dp"
            android:textColor="#000000"/>



        <TextView
            android:id="@+id/general"
            android:layout_below="@id/confirm_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="일반1명"
            android:layout_marginTop="114dp"
            android:textSize="9dp"
            android:textStyle="bold"
            android:textColor="#999999"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="115dp"
        card_view:cardBackgroundColor="#44c0cc"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="10dp">

        <TextView
            android:id="@+id/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=" E열 10 > "
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:textColor="#FFFFFF"/>

    </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/confirm_barcode"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/barcode"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"/>



    </androidx.cardview.widget.CardView>

</RelativeLayout>
